{
  "name": "chefly-backend",
  "version": "1.0.0",
  "description": "Chefly Microservices Backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:gateway": "pnpm --filter gateway dev",
    "dev:auth": "pnpm --filter @chefly/auth dev",
    "dev:user": "pnpm --filter @chefly/user dev",
    "dev:booking": "pnpm --filter @chefly/booking dev",
    "dev:chat": "pnpm --filter @chefly/chat dev",
    "dev:payment": "pnpm --filter @chefly/payment dev",
    "dev:notification": "pnpm --filter @chefly/notification dev",
    "build": "pnpm -r build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0"
  }
}

