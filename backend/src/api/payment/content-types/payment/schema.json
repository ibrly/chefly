{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": "Payment transactions and records"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "booking": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::booking.booking",
      "inversedBy": "payment"
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "paymobTransactionId": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed", "refunded"],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "string"
    },
    "paymentDetails": {
      "type": "json"
    },
    "refundReason": {
      "type": "text"
    },
    "refundedAt": {
      "type": "datetime"
    }
  }
}

